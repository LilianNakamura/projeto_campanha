<!-- Importação do header.ejs  -->
<%- include('../common/header') %>
    <!-- ------------------------------------------------------- -->


    <!-- importação do menu.ejs  -->
    <%- include('../common/menu') %>

        <!-- ------------------------------------------------------- -->

        <main class="mb-4">
            <div class="bg-light p-5 mb-4">
                <h1> Seja Bem Vindo</h1>
                <p class="lead">
                    Fique por dentro das últimas noticias do mundo da Tecnologia
                </p>
            </div>

            <div class = "container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                    <% noticias.forEach(noticia=>{%>
                        <div class = "col">
                            <div class = "card shadow-sm">
                                <div class = "card-body">
                                    <h5 class = "card-title">
                                        <%= noticia.titulo %>
                                    </h5>
                                    <p class = "card-text">
                                        <%= notcia.conteudo.substring(0,50) %> ...
                                    </p>
                                    <p class = "card-text"><small class = "text-muted">
                                        <%= noticia.data_criacao.toLocaleString('pt-BR').split(' ').join(' às ') %></small>
                                    </p>
                                    <a href = "http://noticia?id<%= noticia.id_noticia %>" class="btn btn-primary">Saiba mais</a>

                                </div>

                            </div>

                        </div>

                    <% }) %>

                </div>

            </div>

        </main>

        <!-- ------------------------------------------------------- -->

        <!-- importacao do footer.ejs  -->
        <%- include('../common/footer') %>